<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= pageTitle%>></title>
</head>
<a href="/admin/createBlog">Create Blog</a>
<body>
<main>
    <div class="grid">
        <% blogs.forEach((blog) => { %>
            <article class="card product-item">
                <div class="card__image">
                    <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>">
                </div>
                <header class="card__header">
                    <h1 class="blog__title"><%= blog.title %></h1>
                </header>
                <div class="card__content">
                    <h4 class="blog__description"><%= blog.description %></h4>
                    <p class="blog__body"><%= blog.blogBody.slice(0, 100) %>...</p>
                </div>
                <div class="card__actions">
                    <a href="/admin/<%= blog._id %>" class="btn">Details</a>
                </div>
            </article>
    </div>
    <% }) %>
</main>

</body>
</html>